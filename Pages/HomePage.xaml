<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginAppV2025.Pages.HomePage"
             BackgroundColor="#181A20"
             NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout Padding="30,60,30,30" Spacing="30" VerticalOptions="FillAndExpand">

        <!-- Logo -->
        <Image Source="speedlogo.png"
               HeightRequest="100"
               HorizontalOptions="Center" />

        <!-- Título -->
        <Label Text="SpeedCode"
               FontSize="36"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               Margin="0,10,0,0" />


        <BoxView HeightRequest="1"
                 WidthRequest="220"
                 BackgroundColor="#444"
                 HorizontalOptions="Center"
                 Margin="0,10,0,0"/>


        <VerticalStackLayout Spacing="18" Margin="0,40,0,0">
            <Button Text="Começar Desafio"
                    BackgroundColor="#E6D6F7"
                    TextColor="#181A20"
                    FontAttributes="Bold"
                    CornerRadius="15"
                    HeightRequest="50"
                    FontSize="16"
                    HorizontalOptions="FillAndExpand"
                    Margin="0,0,0,0"/>
            <Button Text="Ranking"
                    BackgroundColor="#E6D6F7"
                    TextColor="#181A20"
                    FontAttributes="Bold"
                    CornerRadius="15"
                    HeightRequest="50"
                    FontSize="16"
                    HorizontalOptions="FillAndExpand"
                    Margin="0,0,0,0"/>
            <Button Text="Perfil"
        BackgroundColor="#E6D6F7"
        TextColor="#181A20"
        FontAttributes="Bold"
        CornerRadius="15"
        HeightRequest="50"
        FontSize="16"
        HorizontalOptions="FillAndExpand"
        Margin="0,0,0,0"
        Clicked="PerfilButton_Clicked"/>
        </VerticalStackLayout>

        <Grid VerticalOptions="EndAndExpand" HorizontalOptions="Center">
            <Image Source="perfil_icon.png"
                   HeightRequest="32"
                   WidthRequest="32"
                   Margin="0,40,0,0"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>