<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginAppV2025.Pages.EditaUsuarioPage"
             BackgroundColor="#181A20"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout Padding="30,60,30,10" Spacing="10">

            <!-- Logo -->
            <Image Source="speedlogo.png"
                   HeightRequest="90"
                   HorizontalOptions="Center" />

            <!-- Título -->
            <Label Text="SpeedCode"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Subtítulo -->
            <Label Text="Cadastro"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

            <!-- Nome -->
            <Label Text="Name:"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,0,0,0"/>
            <Frame Padding="0" HasShadow="False" BorderColor="Transparent" BackgroundColor="Transparent">
                <Entry x:Name="txtNome"
                       TextColor="White"
                       Text="{Binding Nome}"
                       BackgroundColor="#6b706e"
                       HeightRequest="45"
                       FontSize="16"
                       Margin="0,0,0,0"
                       ClearButtonVisibility="WhileEditing"
                       Keyboard="Chat"/>
            </Frame>

            <!-- Email -->
            <Label Text="Email:"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,0,0,0"/>
            <Frame Padding="0" HasShadow="False" BorderColor="Transparent" BackgroundColor="Transparent">
                <Entry x:Name="txtEmail"
                       TextColor="White"
                       BackgroundColor="#6b706e"
                       Text="{Binding Email}"
                       HeightRequest="45"
                       FontSize="16"
                       Margin="0,0,0,0"
                       ClearButtonVisibility="WhileEditing"
                       Keyboard="Email"/>
            </Frame>

            <!-- Senha -->
            <Label Text="Password:"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,0,0,0"/>
            <Frame Padding="0" HasShadow="False" BorderColor="Transparent" BackgroundColor="Transparent">
                <Grid>
                    <Entry x:Name="txtSenha"
                           Text="{Binding Senha}"
                           IsPassword="True"
                           TextColor="White"
                           BackgroundColor="#181A20"
                           HeightRequest="45"
                           FontSize="16"
                           Margin="0"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center"/>
                    <ImageButton x:Name="btnToggleSenha"
                                 Source="hidden.png"
                                 BackgroundColor="Transparent"
                                 Clicked="btnToggleSenha_Clicked"
                                 HeightRequest="10"
                                 WidthRequest="10"
                                 VerticalOptions="Center"
                                 HorizontalOptions="End"
                                 Margin="0,0,0,0"/>
                </Grid>
            </Frame>

            <!-- Botão Login -->
            <Button Text="Cadastrar-se"
                    x:Name="btnEntrar"
                    Clicked="btnEntrar_Clicked_1"
                    BackgroundColor="#2970F2"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="45"
                    FontSize="16"
                    Margin="0,10,0,0" />

            <!-- Separador -->
            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="0,10,0,10" WidthRequest="220">
                <BoxView HeightRequest="1" WidthRequest="80" BackgroundColor="#444" VerticalOptions="Center"/>
                <Label Text="Or" TextColor="#A0A0A0" FontSize="14" Margin="10,0" VerticalOptions="Center" HorizontalOptions="Center"/>
                <BoxView HeightRequest="1" WidthRequest="80" BackgroundColor="#444" VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- Botão Google -->
            <Button Text="Continue with Google"
                    BackgroundColor="White"
                    TextColor="#444"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="45"
                    FontSize="16"
                    Margin="0,0,0,0"
                    ImageSource="google_icon.png" />

            <!-- Botão Facebook -->
            <Button Text="Continue with Facebook"
                    BackgroundColor="White"
                    TextColor="#444"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="45"
                    FontSize="16"
                    Margin="0,0,0,0"
                    ImageSource="facebook_icon.png" />

            <!-- Link de registro -->
            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,30,0,0">
                <Label Text="Já possui conta? "
           TextColor="#A0A0A0"
           FontSize="13"/>
                <Label x:Name="RegistreSeLabel"
           Text="Logar"
           TextColor="#2970F2"
           FontSize="13"
           FontAttributes="Bold"
           HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="RegistreSeLabel_Tapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>